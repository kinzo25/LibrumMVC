@model List<Category>
@{
    ViewData["Title"] = "Category List";
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Category" asp-action="Create"> <i class="bi bi-plus-square"></i> &nbsp Add Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.DisplayOrder</td>
                    <td>
                        <div class=" w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-info mx-2"><i class="bi bi-pencil-fill"></i></a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
